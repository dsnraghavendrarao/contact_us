<div class="container-contact100">
  <div class="wrap-contact100">
    <%= form_with model: @contact_form, class: 'contact100-form validate-form' do |form| %>
      <span class="contact100-form-title">
        <%= I18n.t('new.form_title') %>
      </span>
      <label class="label-input100" for="first-name"><%= I18n.t('new.display_name_label') %>* </label>
      <div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate="<%= I18n.t('new.first_name_validation') %>">
        <%= form.text_field :first_name,:id =>"first-name" ,:class => "input100", :name => "first_name" ,:placeholder => I18n.t('new.first_name') %>
        <span class="focus-input100"></span>
      </div>
      <div class="wrap-input100 rs2-wrap-input100 validate-input" data-validate="<%= I18n.t('new.last_name_validation')%>">
        <%= form.text_field :last_name,:class => "input100", :name => "last_name" ,:placeholder =>I18n.t('new.last_name')%>
        <span class="focus-input100"></span>
      </div>
      <label class="label-input100" for="email"><%= I18n.t('new.email_label') %> *</label>
      <div class="wrap-input100 validate-input" data-validate="<%= I18n.t('new.email_validation') %>">
        <%= form.text_field :email,:id => "email",:class => "input100", :name => "email" ,:placeholder =>"#{I18n.t('new.example')}. example@email.com"%>
        <span class="focus-input100"></span>
      </div>
      <label class="label-input100" for="phone"><%= I18n.t('new.phone_number_label')%></label>
      <div class="wrap-input100">
        <%= form.text_field :phone,:id => "phone",:class => "input100", :name => "phone" ,:placeholder =>"#{I18n.t('new.example')}. +1 800 000000"%>
        <span class="focus-input100"></span>
      </div>
      <label class="label-input100" for="message"><%= I18n.t('new.message_label') %> *</label>
      <div class="wrap-input100 validate-input" data-validate= "<%=I18n.t('new.message_validation') %>" >
        <%= form.text_area :message,:id => "message",:class => "input100", :name => "message" ,:placeholder => I18n.t('new.message_placeholders') %>
        <span class="focus-input100"></span>
      </div>
      <div class="container-contact100-form-btn">
        <%= form.submit I18n.t('new.send_message_button'), :class => "contact100-form-btn" %>
      </div>
    <%end%>
    <div class="contact100-more flex-col-c-m ", style="background-image: url('<%= asset_pack_path 'media/images/bg-01.jpg' %>')">
      <div class="flex-w size1 p-b-47">
        <div class="txt1 p-r-25">
          <span class="lnr lnr-map-marker"></span>
        </div>
        <div class="flex-col size2">
          <span class="txt1 p-b-20">
            Address
          </span>
          <span class="txt2">
            Mada Center 8th floor, 379 Hudson St, New York, NY 10018 US
          </span>
        </div>
      </div>
      <div class="dis-flex size1 p-b-47">
        <div class="txt1 p-r-25">
          <span class="lnr lnr-phone-handset"></span>
        </div>
        <div class="flex-col size2">
          <span class="txt1 p-b-20">Lets Talk</span>
          <span class="txt3"> +1 800 1236879</span>
        </div>
      </div>
      <div class="dis-flex size1 p-b-47">
        <div class="txt1 p-r-25">
          <span class="lnr lnr-envelope"></span>
        </div>
        <div class="flex-col size2">
          <span class="txt1 p-b-20"> General Support</span>
          <span class="txt3">contact@example.com</span>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="dropDownSelect1"></div>

